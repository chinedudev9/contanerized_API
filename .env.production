# ===========================
# Production Environment
# ===========================

# Application
NODE_ENV=production
PORT=3000

# Database Configuration
# IMPORTANT: Change these values in your actual production deployment
DATABASE_URL=postgresql://prod_user:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/containerized_api_prod
DB_HOST=postgres
DB_PORT=5432
DB_NAME=containerized_api_prod
DB_USER=prod_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# JWT Configuration
# IMPORTANT: Generate a strong, unique JWT secret for production
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_KEY_IN_PRODUCTION_AT_LEAST_64_CHARACTERS
JWT_EXPIRES_IN=1h

# CORS Configuration
# IMPORTANT: Specify your actual domain(s)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# Production specific
DEBUG=false